<style>
    @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap');

    .udon-preview-page {
        max-width: 1100px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        color: #34D399;
        border-bottom: 2px solid #064E3B;
        padding-bottom: 10px;
    }

    h2 {
        color: #10B981;
        margin-top: 30px;
    }

    h3 {
        color: #34D399;
        font-size: 1rem;
        margin-top: 20px;
    }

    .intro {
        color: #064E3B;
        margin-bottom: 30px;
    }

    /* Main Terminal Container */
    .terminal-container {
        background-color: #000;
        padding: 20px;
        border: 1px solid #064E3B;
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.1);
        border-radius: 4px;
        margin-bottom: 30px;
    }

    .terminal-screen {
        font-family: 'JetBrains Mono', 'Consolas', monospace;
        font-size: 13px;
        line-height: 1.5;
        white-space: pre;
        background-color: #000;
        overflow-x: auto;
        height: auto;
    }

    .terminal-mini {
        font-family: 'JetBrains Mono', 'Consolas', monospace;
        font-size: 14px;
        line-height: 16px;
        white-space: pre;
        background-color: #000;
        padding: 15px;
        border: 1px solid #064E3B;
        border-radius: 4px;
        overflow-x: auto;
    }

    /* TMP Color Simulation Classes */
    .c-struct { color: #064E3B; }
    .c-prim   { color: #10B981; }
    .c-high   { color: #34D399; }
    .c-dim    { color: #022C22; }
    .c-err    { color: #F87171; text-shadow: 2px 0 0 rgba(255,0,0,0.3); }
    
    .blink { animation: blinker 1s linear infinite; }
    @keyframes blinker { 50% { opacity: 0; } }

    .glitch {
        animation: glitch 0.3s infinite;
    }
    @keyframes glitch {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; transform: translateX(2px); }
    }

    /* Palette Reference */
    .palette-reference {
        background: #0a0a0a;
        border: 1px solid #064E3B;
        padding: 20px;
        border-radius: 4px;
        margin-bottom: 30px;
    }

    .palette-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 15px;
    }

    .swatch {
        padding: 20px 15px;
        border-radius: 4px;
        text-align: center;
        border: 1px solid #064E3B;
    }

    .swatch .label {
        display: block;
        color: #fff;
        font-size: 0.85rem;
        font-weight: bold;
        text-shadow: 0 0 5px rgba(0,0,0,0.8);
    }

    .swatch .hex {
        display: block;
        color: rgba(255,255,255,0.7);
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        margin-top: 5px;
    }

    /* Component Examples */
    .component-examples {
        background: #0a0a0a;
        border: 1px solid #064E3B;
        padding: 20px;
        border-radius: 4px;
    }

    /* Mobile responsive */
    @media (max-width: 900px) {
        .terminal-screen,
        .terminal-mini {
            font-size: 11px;
            line-height: 12px;
        }
    }
</style>
