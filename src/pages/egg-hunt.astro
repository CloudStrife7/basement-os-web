          h1Element.style.transform = 'translateY(-1px)';
          setTimeout(function() {
            h1Element.style.transform = '';
          }, 70);
        }, 19000);

        // 25 seconds: The "0" disappears and reappears
        setTimeout(function() {
          secretZero.style.opacity = '0';
          setTimeout(function() {
            secretZero.style.opacity = '';
          }, 150);
        }, 25000);

        // 30 seconds: START TYPEWRITER EFFECT
        // Delete /terminal one character at a time
        const pathText = document.getElementById('path-text');
        const originalPath = '/terminal';
        const newPath = '/welcome_gunters...';
        let currentText = originalPath;
        
        setTimeout(function() {
          // Delete phase - one character every 100ms
          function deleteChar() {
            if (currentText.length > 0) {
              currentText = currentText.slice(0, -1);
              pathText.textContent = currentText;
              setTimeout(deleteChar, 100);
            } else {
              // Empty - wait 3 seconds with just cursor
              setTimeout(function() {
                // Type phase - one character every 80ms
                let charIndex = 0;
                function typeChar() {
                  if (charIndex < newPath.length) {
                    currentText = newPath.slice(0, charIndex + 1);
                    pathText.textContent = currentText;
                    charIndex++;
                    setTimeout(typeChar, 80);
                  } else {
                    // Done typing - now reveal is clickable
                    errorPage.classList.add('revealed');
                  }
                }
                typeChar();
              }, 3000);
            }
