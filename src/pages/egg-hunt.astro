      const REVEAL_DELAY = 39000;
      const GLITCH_DURATION = 2000;

      function init() {
        const errorPage = document.getElementById('error-page');
        const secretZero = document.getElementById('secret-zero');
        const astroLogo = document.getElementById('astro-logo');
        const hiddenHint = document.getElementById('hidden-hint');

        function navigate() {
          if (errorPage.classList.contains('revealed')) {
            window.location.href = '/gunter';
          }
        }

        // Make both the zero and logo clickable
        secretZero.addEventListener('click', navigate);
        astroLogo.addEventListener('click', navigate);

        // SUBTLE MICRO-GLITCHES (keep users suspicious)
        const statusMessage = document.querySelector('.statusMessage');
        const preElement = document.querySelector('pre');
        const h1Element = document.querySelector('h1');
        
        // 2 seconds: Logo goes monochrome for a split second
        setTimeout(function() {
          astroLogo.style.filter = 'grayscale(100%)';
          setTimeout(function() {
            astroLogo.style.filter = '';
          }, 60);
        }, 2000);

        // 4 seconds: The colon after 404 disappears briefly
        setTimeout(function() {
          const statusCode = document.querySelector('.statusCode');
          const original = statusCode.innerHTML;
          statusCode.innerHTML = '4<span class="zero" id="secret-zero">0</span>4 ';
          setTimeout(function() {
            statusCode.innerHTML = original;
            // Re-attach click listener
            document.getElementById('secret-zero').addEventListener('click', navigate);
          }, 120);
        }, 4000);

        // 7 seconds: "Not found" briefly becomes "Not foun"
        setTimeout(function() {
          statusMessage.textContent = 'Not foun';
          setTimeout(function() {
            statusMessage.textContent = 'Not found';
          }, 100);
        }, 7000);

        // 11 seconds: Path text shifts 1px
        setTimeout(function() {
          preElement.style.transform = 'translateX(1px)';
          setTimeout(function() {
            preElement.style.transform = '';
          }, 80);
        }, 11000);

        // 15 seconds: Logo opacity flickers
