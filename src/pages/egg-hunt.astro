          deleteChar();
        }, 30000);

        // Console breadcrumbs (appear immediately for source explorers)
        console.log('%c404 - Page Not Found', 'color: #555; font-size: 14px;');
        console.log('%cNothing to see here...', 'color: #333;');
      }

      // Decode helpers (for curious console users)
      window.decodeHint = function(type, data) {
        if (type === 'ascii') {
          return data.split('.').map(n => String.fromCharCode(parseInt(n))).join('');
        } else if (type === 'binary') {
          return data.split(' ').map(b => String.fromCharCode(parseInt(b, 2))).join('');
        } else if (type === 'base64') {
          return atob(data);
        }
        return 'Unknown type. Try: ascii, binary, base64';
      };

