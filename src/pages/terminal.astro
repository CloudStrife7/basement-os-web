---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="BASEMENT OS | REMOTE TERMINAL">
    <div class="terminal-page-container">
        <!-- Back Button Overlay -->
        <a href="/" class="back-btn">
            &lt; DISCONNECT / RETURN TO HOME
        </a>

        <!-- REMOTE ACCESS TERMINAL -->
        <link rel="stylesheet" href="/css/terminal.css">
        <div id="terminal-root" class="basement-terminal-container">
            <div class="terminal-screen">CONNECTING TO HOST...</div>
            <div class="scanlines"></div>
        </div>
    </div>
</BaseLayout>

<style>
    .terminal-page-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        padding: 20px;
        background-color: #000;
    }

    .back-btn {
        margin-bottom: 20px;
        padding: 10px 20px;
        background: #33ff33;
        color: #000;
        font-family: 'VT323', monospace;
        text-decoration: none;
        font-size: 1.5rem;
        border: 2px solid #33ff33;
        transition: all 0.2s;
    }

    .back-btn:hover {
        background: #000;
        color: #33ff33;
        box-shadow: 0 0 15px rgba(51, 255, 51, 0.5);
    }
</style>

<script src="/js/basement-os.js" is:inline></script>
<script is:inline>
    // Initialize when ready
    document.addEventListener('DOMContentLoaded', () => {
        if (typeof BasementOS !== 'undefined') {
            const os = new BasementOS('terminal-root');
        } else {
            console.error('BasementOS library not loaded');
        }
    });
</script>
