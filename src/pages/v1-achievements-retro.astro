  @keyframes sparkle {
    0% { text-shadow: 0 0 10px #ff00ff, 0 0 20px #ff00ff, 2px 2px 0 #00ffff; }
    100% { text-shadow: 0 0 20px #00ffff, 0 0 30px #ff00ff, 2px 2px 0 #ff00ff; }
