  /* Footer */
  .retro-footer {
    text-align: center;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 2px groove #666;
  }

  .webrings {
    margin-bottom: 15px;
  }

  .webring-nav {
    color: #00ffff;
    cursor: pointer;
    padding: 0 10px;
  }

  .webring-nav:hover {
    text-decoration: underline;
  }

  .webring-name {
