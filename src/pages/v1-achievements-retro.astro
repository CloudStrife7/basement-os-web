    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background: linear-gradient(135deg, #1a1a4a 0%, #0a0a2a 100%);
    border: 3px outset #6666cc;
    box-shadow: 
      inset 2px 2px 0 #9999ff,
      inset -2px -2px 0 #333366,
      0 0 20px rgba(0, 255, 0, 0.2);
  }

  /* Header */
  .retro-header {
    text-align: center;
    margin-bottom: 20px;
  }

  /* Marquee */
  .marquee-container {
    background: #000;
    border: 2px inset #333;
    padding: 5px 0;
    overflow: hidden;
    margin-bottom: 15px;
  }

  .marquee-text {
    display: inline-block;
    white-space: nowrap;
    animation: marquee 20s linear infinite;
    color: #ffff00;
    font-size: 12px;
    font-family: 'VT323', monospace;
  }

  @keyframes marquee {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }

  /* Sparkle Text */
