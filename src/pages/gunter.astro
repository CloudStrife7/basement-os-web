      transform: translateY(100vh);
      opacity: 0;
    }
  }

  /* ============================================
     Chromatic Aberration Effect (applied via JS)
     ============================================ */
  .chromatic-shift {
    animation: chromatic 0.15s ease-out;
  }

  @keyframes chromatic {
    0% {
      text-shadow: 
        -2px 0 #ff0000,
        2px 0 #00ffff;
    }
    100% {
      text-shadow: none;
    }
  }

  /* ============================================
     Responsive Adjustments
     ============================================ */
  @media (max-width: 600px) {
    .gunter-content {
