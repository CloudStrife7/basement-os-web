    font-size: 0.8em;
    font-style: italic;
    line-height: 1.4;
  }

  /* Architecture V2 */
  .architecture-v2 {
    position: relative;
    background: #000;
    border: 1px solid var(--border-color);
    padding: 60px 40px;
    margin-top: 20px;
    border-radius: 4px;
    overflow: hidden;
