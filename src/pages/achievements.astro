<style>
  /* Achievement Summary Bar */
  .achievement-summary {
    display: flex;
    justify-content: center;
    gap: 40px;
    padding: 20px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    margin-bottom: 20px;
  }

  .summary-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .summary-number {
    font-size: 2em;
    font-weight: bold;
    color: var(--accent-primary);
    font-family: var(--font-mono);
  }

  .summary-label {
    font-size: 0.75em;
    color: var(--text-secondary);
    letter-spacing: 1px;
  }

  /* Category Headers */
  .achievement-category {
    margin-bottom: 20px;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--accent-primary);
    margin-bottom: 10px;
  }

  .category-icon {
    font-size: 1.2em;
  }

  .category-stats {
    margin-left: auto;
    font-size: 0.7em;
    color: var(--text-secondary);
    font-weight: normal;
  }

  .category-desc {
    color: var(--text-secondary);
    font-size: 0.9em;
    margin-bottom: 15px;
    font-style: italic;
  }

  /* Achievement Grid */
  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 12px;
  }

  /* Xbox 360 Style Achievement Cards */
  .achievement-card {
    display: flex;
    gap: 12px;
    padding: 12px;
    background: linear-gradient(180deg, #2d2d2d 0%, #1a1a1a 100%);
    border: 1px solid #444;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .achievement-card:hover {
    border-color: var(--accent-primary);
    box-shadow: 0 0 15px rgba(16, 185, 129, 0.2);
    transform: translateY(-2px);
  }

  .achievement-card.legendary {
    background: linear-gradient(180deg, #3d3515 0%, #2a2510 100%);
    border-color: #b8860b;
  }

  .achievement-card.legendary:hover {
    border-color: #ffd700;
    box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
  }

  .achievement-card.locked {
    background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
    border-color: #333;
    opacity: 0.7;
  }

  .achievement-card.locked:hover {
    border-color: #555;
    box-shadow: 0 0 10px rgba(100, 100, 100, 0.2);
    opacity: 0.85;
  }

  .achievement-card.locked .achievement-title,
  .achievement-card.locked .achievement-desc,
  .achievement-card.locked .achievement-requirement,
  .achievement-card.locked .achievement-points {
    color: #555;
  }

  .achievement-card.locked .achievement-icon {
    opacity: 0.5;
  }

  .achievement-icon {
    font-size: 1.8em;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
    flex-shrink: 0;
  }

  .achievement-info {
    flex: 1;
    min-width: 0;
  }

  .achievement-title {
    color: #fff;
    font-weight: bold;
    font-size: 0.95em;
    margin-bottom: 2px;
  }

  .achievement-desc {
    color: #999;
    font-size: 0.8em;
    margin-bottom: 6px;
  }

  .achievement-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .achievement-requirement {
    color: var(--text-secondary);
    font-size: 0.75em;
    font-family: var(--font-mono);
  }

  .achievement-points {
    color: var(--accent-primary);
    font-weight: bold;
    font-family: var(--font-mono);
    font-size: 0.85em;
  }

  .achievement-card.legendary .achievement-points {
    color: #ffd700;
  }

  /* CTA Section */
  .cta-section {
    text-align: center;
    padding: 30px 0;
  }

  .cta-text {
    color: var(--text-secondary);
    margin-bottom: 15px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--accent-primary);
    color: #000;
    padding: 15px 30px;
    font-family: var(--font-mono);
    font-size: 1.1em;
    font-weight: bold;
    text-decoration: none;
    border: 2px solid var(--accent-primary);
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: transparent;
    color: var(--accent-primary);
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
  }

  /* Responsive */
  @media (max-width: 600px) {
    .achievement-summary {
      flex-direction: row;
      gap: 20px;
    }

    .summary-number {
      font-size: 1.5em;
    }

    .achievements-grid {
      grid-template-columns: 1fr;
    }

    .category-stats {
      display: none;
    }
  }
</style>
