---
/**
 * THE CODEX - Terminal Code Display
 *
 * Displays the code "2006" in a retro terminal dialog box
 * OK button links to VRChat world launch page
 */
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="The Codex">
  <div class="codex-container">
    <!-- CRT scanline overlay -->
    <div class="codex-scanlines"></div>

    <!-- Terminal dialog box -->
    <div class="codex-dialog">
      <div class="codex-titlebar">
        <span class="codex-titlebar-text">CODEX.EXE</span>
        <span class="codex-titlebar-controls">[-][x]</span>
      </div>
      <div class="codex-body">
        <div class="codex-code">2006</div>
      </div>
      <div class="codex-footer">
        <a href="https://vrchat.com/home/launch?worldId=wrld_7302897c-be0f-4037-ac67-76f0ea065c2b" class="codex-ok-btn">[ OK ]</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .codex-container {
    min-height: 100vh;
    background: var(--bg-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  /* CRT scanlines */
  .codex-scanlines {
    position: fixed;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      var(--scanline-color) 0px,
      var(--scanline-color) 1px,
      transparent 1px,
      transparent 2px
    );
    pointer-events: none;
    z-index: 10;
  }

  /* Dialog box */
  .codex-dialog {
    position: relative;
    z-index: 2;
    border: 2px solid var(--accent-primary);
    background: var(--bg-terminal);
    box-shadow:
      0 0 20px rgba(var(--accent-primary), 0.2),
      0 0 60px rgba(0, 0, 0, 0.5),
      inset 0 0 30px rgba(0, 0, 0, 0.3);
    min-width: 320px;
    max-width: 400px;
    font-family: var(--font-mono);
  }

  /* Title bar */
  .codex-titlebar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 6px 10px;
    background: var(--accent-primary);
    color: var(--bg-primary);
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 1px;
    user-select: none;
  }

  .codex-titlebar-controls {
    font-size: 0.8rem;
    opacity: 0.7;
  }

  /* Body with code */
  .codex-body {
    padding: 40px 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .codex-code {
    font-family: var(--font-mono);
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    letter-spacing: 12px;
    text-shadow:
      0 0 5px var(--accent-primary),
      0 0 15px var(--accent-primary),
      0 0 30px rgba(255, 62, 138, 0.2);
    animation: codexPulse 3s ease-in-out infinite;
  }

  @keyframes codexPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.85; }
  }

  /* Footer with OK button */
  .codex-footer {
    padding: 15px 30px 20px;
    display: flex;
    justify-content: center;
    border-top: 1px solid var(--border-color);
  }

  .codex-ok-btn {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 2px;
    color: var(--bg-primary);
    background: var(--accent-primary);
    border: none;
    padding: 8px 32px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s ease;
  }

  .codex-ok-btn:hover {
    background: var(--text-primary);
    color: var(--bg-primary);
    text-shadow: none;
    box-shadow: 0 0 15px var(--accent-primary);
  }

  /* Subtle screen flicker */
  .codex-dialog {
    animation: screenFlicker 8s linear infinite;
  }

  @keyframes screenFlicker {
    0%, 100% { opacity: 1; }
    92% { opacity: 1; }
    93% { opacity: 0.95; }
    94% { opacity: 1; }
  }

  /* Responsive */
  @media (max-width: 600px) {
    .codex-dialog {
      min-width: 260px;
      margin: 0 20px;
    }

    .codex-code {
      font-size: 2.5rem;
      letter-spacing: 8px;
    }
  }
</style>

<script is:inline>
  (function() {
    console.log('%c> CODEX.EXE', 'color: #ff3e8a; font-size: 14px; font-family: monospace;');
    console.log('%c> STATUS: ACTIVE', 'color: #888; font-family: monospace;');
    console.log('%c> Remember this number.', 'color: #666; font-family: monospace;');
  })();
</script>
